@model SocialMedia.Application.Features.Post.Command.CreatePostCommand
<form asp-action="CreatePost" method="post" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label asp-for="Content">What's on your mind?</label>
        <textarea asp-for="Content" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Images">Add Images</label>
        <input asp-for="Images" type="file" class="form-control" multiple />
    </div>

    <button type="submit" class="btn btn-primary">Post</button>
</form>
